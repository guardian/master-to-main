{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "node16",
		"moduleResolution": "node16",
    "outDir": "lib",
    "rootDir": "src",
    "target": "esnext",
    "lib": [
			"ES2021"
		],
    "esModuleInterop": true,
    "noPropertyAccessFromIndexSignature": false,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "src/**/*.test.ts"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true
  }
}
