{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "ES2022",
		"moduleResolution": "node16",
    "outDir": "lib",
    "rootDir": "src",
    "target": "esnext",
    "lib": [
			"ES2021"
		],
    "esModuleInterop": true,
    "noPropertyAccessFromIndexSignature": false,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "src/**/*.test.ts"],
